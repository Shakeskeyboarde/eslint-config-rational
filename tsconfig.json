{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "*",
    "**/src/**/*",
    "**/test/**/*"
  ],
}