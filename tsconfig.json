{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "ES2022",
    "target": "ES2022",
    "jsx": "react-jsx",
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": ["**/*"],
  "exclude": [".vscode", "node_modules", "out", "docs"]
}
